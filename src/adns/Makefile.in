CC=@CC@
CFLAGS=-Wall -O2
RANLIB=@RANLIB@
AR=@AR@
XLIBS=@LIBS@

srcdir=		.

include		adns.make

all:		libadns.a

distclean:	clean
		rm -f config.h config.log config.cache config.status Makefile

clean:
		rm -f *.[oa] libadns.so libadns.so.1 libadns.so.1.0

libadns.a:	$(LIBOBJS)
		rm -f $@
		$(AR) cqv $@.new $(LIBOBJS)
		$(RANLIB) $@.new
		mv -f $@.new $@

libadns.so:	$(LIBOBJS)
		rm -f $@ $@.1 $@.1.0
		$(LD) -shared $(LIBOBJS) -soname=libadns.so.1 -o $@.1.0 \
-lc $(XLIBS) ../compat/inet_ntop.o ../compat/inet_pton.o ../compat/inet_aton.o
		ln -s $@.1.0 $@.1
		ln -s $@.1.0 $@

$(LIBOBJS):	adns.h internal.h config.h

